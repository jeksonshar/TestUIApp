<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestUIapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="colorAccent">@color/toolbar_color</item>
        <item name="colorControlActivated">@color/toolbar_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor" >@color/toolbar_color</item>
    </style>

    <style name="CircularProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_progress</item>
    </style>
    
    <style name="VerticalRecyclerItem">
        <item name="background">@drawable/background_item_vertical_recycler</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
    </style>

    <style name="BottomSheetDialogDefineTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalDefineStyle</item>
    </style>

    <style name="ModalDefineStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_define_background</item>
    </style>

    <style name="ButtonBottomSheet.White" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@drawable/button_bottom_sheet_background</item>
    </style>

    <style name="BottomSheetDialogSelectActivityTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetSelectActivityStyle</item>
    </style>

    <style name="BottomSheetSelectActivityStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>